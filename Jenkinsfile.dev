pipeline {
    agent any

    environment {
        name = 'demo-app'
        port = '8080:8080'
        ruta = 'D:/proyecto-spring/demo'
    }

    stages {
        stage('Construir imagen') {
            steps {
                script {
                    dir(ruta) {
                        bat "docker build -t ${name} ."
                    }
                }
            }
        }

        stage('Docker images') {
            steps {
                script {
                    dir(ruta) {
                        bat 'docker images'
                    }
                }
            }
        }

        stage('Construir contenedor') {
            steps {
                script {
                    dir(ruta) {
                        bat "docker run -d --publish ${port} ${name}"
                    }
                }
            }
        }

        stage('Docker container') {
            steps {
                script {
                    bat 'docker ps'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Exito'
            }
        }
    }
}

